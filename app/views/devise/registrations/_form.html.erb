<div class="col-md-10 mx-auto col-lg-5">
  <%= form_with(model: resource, url: session_path(resource_name), local: true, html: { class: 'p-4 p-md-5 border rounded-3 bg-light' }) do |form| %>
    <div class="form-floating mb-3">
      <%= form.email_field :email, class: 'form-control', id: 'floatingInput', placeholder: 'name@example.com', required: false, autofocus: true, autocomplete: "email" %>
      <%= form.label :email, 'Email address', class: 'form-label', for: 'floatingInput' %>
    </div>
    <div class="form-floating mb-3">
      <%= form.password_field :password, class: 'form-control', id: 'floatingPassword', placeholder: 'Password', required: false, autocomplete: "current-password" %>
      <%= form.label :password, 'Password', class: 'form-label', for: 'floatingPassword' %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="form-check mb-3">
        <%= form.check_box :remember_me, class: 'form-check-input', id: 'rememberMe' %>
        <%= form.label :remember_me, class: 'form-check-label', for: 'rememberMe' do %>
          Remember me
        <% end %>
      </div>
    <% end %>
    <%= form.button 'Log in', id: 'sign-in-button', class: 'w-100 mb-3 btn btn-lg', type: 'submit' %>
    <%= render "devise/shared/links" %>
  <% end %>
</div>
