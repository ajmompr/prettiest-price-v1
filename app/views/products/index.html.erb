<p style="color: green"><%= notice %></p>
<div class="container">
<h2>Products</h2>
<% @products.each do |product| %>
  <div class="card w-100 text-end">
    <div class="row g-0">
      <div class="mt-3 col-md-4">
        <img src="<%= product.image %>" class="img-fluid rounded-start retailer-logo" alt="<%=product.name%> logo">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"> <%= product.name%></h5>
          <p class="card-text"><%= product.brand %></p>
          <p class="card-text"><%= link_to "View Product", product_path(product) %></p>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>

